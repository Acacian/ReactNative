{
  "dataset_reader": {
    "class_name": "basic_classification_reader",
    "data_path": "{DOWNLOADS_PATH}/intents/snips",
    "x": "text",
    "y": "intent"
  },
  "dataset_iterator": {
    "class_name": "basic_classification_iterator",
    "seed": 42,
    "split_fields": ["train", "valid", "test"]
  },
  "chainer": {
    "in": ["x"],
    "out": ["y_pred"],
    "pipe": [
      {
        "class_name": "torch_transformers_preprocessor",
        "vocab_file": "bert-base-uncased",
        "max_seq_length": 128,
        "do_lower_case": true,
        "in": ["x"],
        "out": ["x"]
      },
      {
        "class_name": "torch_transformers_classifier",
        "n_classes": 7,
        "pretrained_bert": "bert-base-uncased",
        "in": ["x"],
        "out": ["y_pred"],
        "save_path": "/app/models/bert_classifier",
        "load_path": "/app/models/bert_classifier",
        "device": "cpu"
      }
    ]
  },
  "train": {
    "epochs": 1,
    "batch_size": 8,
    "metrics": [
      {
        "name": "f1",
        "inputs": ["y_pred", "y"]
      }
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 0.1,
    "log_every_n_batches": 10,
    "optimizer": "AdamW",
    "learning_rate": 5e-5,
    "weight_decay": 0.01,
    "bert_learning_rate": 2e-5,
    "bert_weight_decay": 0.0
  }
}